<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_popup_body"
            style="@style/PopupBodyTextWithBtnStyle"
            app:layout_constraintBottom_toTopOf="@+id/btn_twobtn_popup_negative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="테스트테스트테스트테스트테스트테스트테스트테스트테스트테스트adsdsdas\nbadasdasdasdasdasdasdasd\qwdqwddd"/>

        <Button
            android:id="@+id/btn_twobtn_popup_negative"
            style="@style/PopupTwoBtnStyleNegative"
            android:text="@string/common_cancel"
            app:layout_constraintEnd_toStartOf="@+id/btn_twobtn_popup_positive"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_popup_body"/>

        <Button
            android:id="@+id/btn_twobtn_popup_positive"
            style="@style/PopupTwoBtnStylePositive"
            android:text="@string/main_btn_finish"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_twobtn_popup_negative"
            app:layout_constraintTop_toBottomOf="@+id/tv_popup_body"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
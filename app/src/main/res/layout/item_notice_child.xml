<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/view_divider_expanded"
            android:background="@color/colorWhite10"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_notice_body"
            android:text="눈길이 위험하니 안전운행하세요.\n눈길이 위험하니 안전운행하세요.\n눈길이 위험하니 안전운행하세요.\n눈길이 위험하니 안전운행하세요.\n눈길이 위험하니 안전운행하세요.\n"
            android:textSize="20dp"
            android:padding="16dp"
            android:maxLines="10"
            android:ellipsize="end"
            style="@style/TextViewStyle_regular"
            android:textColor="@color/colorGray01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <View
            android:id="@+id/view_divider_expanded_bottom"
            android:background="@color/colorWhite10"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
    </LinearLayout>
</layout>
<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_popup_item"
        android:background="@drawable/selector_bg_item_send_msg"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_popup_item_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="start|center_vertical"
            android:maxLines="2"
            android:ellipsize="end"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/msg_9min"
            tools:text="9분 이내로 도착합니다.\n차량번호는 12가3456 입니다."
            android:textSize="22dp"
            android:lineSpacingExtra="-8dp"
            android:textColor="@color/selector_tc_popup_navi"
            android:background="@android:color/transparent"
            style="@style/TextViewStyle_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <!--android:textColor="@color/colorGray01"-->
        <View
            android:id="@+id/view_popup_item_divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/colorBlack10"
            app:layout_constraintBottom_toBottomOf="@+id/tv_popup_item_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
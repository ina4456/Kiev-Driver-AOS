<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGray11">

        <include
            android:id="@+id/call_history_toolbar"
            layout="@layout/view_toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <!--오늘-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_call_history_list_today"
            style="@style/CallHistoryBoxStyle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/selector_bg_call_history_today"
            app:layout_constraintBottom_toTopOf="@+id/cl_call_history_list_this_month"
            app:layout_constraintEnd_toStartOf="@+id/cl_call_history_list_recent_7days"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/call_history_toolbar">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_today"
                style="@style/CallHistoryBoxTitleStyle"
                android:text="@string/ch_today"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_today_divider"
                style="@style/CallHistoryBoxDividerStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_today"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_today_working_count"
                style="@style/CallHistoryBoxLabelStyle"
                android:layout_marginBottom="6dp"
                android:text="@string/ch_run_count"
                app:layout_constraintBottom_toTopOf="@+id/tv_today_working_day_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_today_divider"
                app:layout_constraintVertical_chainStyle="packed"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_today_working_day_count"
                style="@style/CallHistoryBoxCountStyle"
                android:text="@string/ch_count_def"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_today_working_count"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--최근 7일-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_call_history_list_recent_7days"
            style="@style/CallHistoryBoxStyle"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/selector_bg_call_history_recent_7days"
            app:layout_constraintBottom_toTopOf="@+id/cl_call_history_list_last_month"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cl_call_history_list_today"
            app:layout_constraintTop_toBottomOf="@+id/call_history_toolbar">

            <!--타이틀-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_recent_7days"
                style="@style/CallHistoryBoxTitleStyle"
                android:text="@string/ch_recent_7_days"
                app:layout_constraintBottom_toTopOf="@+id/view_recent_7days_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/view_recent_7days_divider"
                style="@style/CallHistoryBoxDividerStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_recent_7days"/>

            <!--영업-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_recent_7days_working_day"
                style="@style/CallHistoryBoxLabelStyle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="@string/ch_working_days"
                app:layout_constraintBottom_toTopOf="@+id/tv_recent_7days_working_day_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_recent_7days_divider"
                app:layout_constraintVertical_chainStyle="packed"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_recent_7days_working_day_count"
                style="@style/CallHistoryBoxCountStyle"
                android:text="@string/ch_day_def"
                app:layout_constraintBottom_toTopOf="@+id/iv_divider_recent_7days"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recent_7days_working_day"/>

            <ImageView
                android:id="@+id/iv_divider_recent_7days"
                style="@style/CallHistoryBoxImageDividerStyle"
                app:layout_constraintBottom_toTopOf="@+id/tv_recent_7days_run"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recent_7days_working_day_count"/>

            <!--운행-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_recent_7days_run"
                style="@style/CallHistoryBoxLabelStyle"
                android:layout_marginBottom="4dp"
                android:text="@string/ch_run_count"
                app:layout_constraintBottom_toTopOf="@+id/tv_recent_7days_run_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_divider_recent_7days"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_recent_7days_run_count"
                style="@style/CallHistoryBoxCountStyle"
                android:text="@string/ch_count_def"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_recent_7days_run"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--이번달-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_call_history_list_this_month"
            style="@style/CallHistoryBoxStyle"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_bg_call_history_this_month"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/cl_call_history_list_last_month"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_call_history_list_today">

            <!--타이틀-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_this_month"
                style="@style/CallHistoryBoxTitleStyle"
                android:text="@string/ch_this_month"
                app:layout_constraintBottom_toTopOf="@+id/view_this_month_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/view_this_month_divider"
                style="@style/CallHistoryBoxDividerStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_this_month"/>

            <!--영업-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_this_month_working_day"
                style="@style/CallHistoryBoxLabelStyle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="@string/ch_working_days"
                app:layout_constraintBottom_toTopOf="@+id/tv_this_month_working_day_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_this_month_divider"
                app:layout_constraintVertical_chainStyle="packed"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_this_month_working_day_count"
                style="@style/CallHistoryBoxCountStyle"
                android:text="@string/ch_day_def"
                app:layout_constraintBottom_toTopOf="@+id/iv_divider_this_month"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_this_month_working_day"/>

            <ImageView
                android:id="@+id/iv_divider_this_month"
                style="@style/CallHistoryBoxImageDividerStyle"
                app:layout_constraintBottom_toTopOf="@+id/tv_this_month_run"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_this_month_working_day_count"/>

            <!--운행-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_this_month_run"
                style="@style/CallHistoryBoxLabelStyle"
                android:layout_marginBottom="4dp"
                android:text="@string/ch_run_count"
                app:layout_constraintBottom_toTopOf="@+id/tv_this_month_run_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_divider_this_month"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_this_month_run_count"
                style="@style/CallHistoryBoxCountStyle"
                android:text="@string/ch_count_def"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_this_month_run"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--지난달-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_call_history_list_last_month"
            style="@style/CallHistoryBoxStyle"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/selector_bg_call_history_last_month"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/cl_call_history_list_this_month"
            app:layout_constraintTop_toBottomOf="@+id/cl_call_history_list_recent_7days">

            <!--타이틀-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_last_month"
                style="@style/CallHistoryBoxTitleStyle"
                android:text="@string/ch_last_month"
                app:layout_constraintBottom_toTopOf="@+id/view_last_month_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <View
                android:id="@+id/view_last_month_divider"
                style="@style/CallHistoryBoxDividerStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_last_month"/>

            <!--영업-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_last_month_working_day"
                style="@style/CallHistoryBoxLabelStyle"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:text="@string/ch_working_days"
                app:layout_constraintBottom_toTopOf="@+id/tv_last_month_working_day_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view_last_month_divider"
                app:layout_constraintVertical_chainStyle="packed"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_last_month_working_day_count"
                style="@style/CallHistoryBoxCountStyle"
                android:text="@string/ch_day_def"
                app:layout_constraintBottom_toTopOf="@+id/iv_divider_last_month"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_last_month_working_day"/>

            <ImageView
                android:id="@+id/iv_divider_last_month"
                style="@style/CallHistoryBoxImageDividerStyle"
                app:layout_constraintBottom_toTopOf="@+id/tv_last_month_run"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_last_month_working_day_count"/>

            <!--운행-->
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_last_month_run"
                style="@style/CallHistoryBoxLabelStyle"
                android:layout_marginBottom="4dp"
                android:text="@string/ch_run_count"
                app:layout_constraintBottom_toTopOf="@+id/tv_last_month_run_count"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_divider_last_month"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_last_month_run_count"
                style="@style/CallHistoryBoxCountStyle"
                android:text="@string/ch_count_def"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_last_month_run"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>